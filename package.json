{
  "name": "react-native-stonk-charts",
  "version": "4.0.1",
  "description": "A beautiful, performant chart library for React Native. Fork of react-native-wagmi-charts with Reanimated v4 support.",
  "license": "MIT",
  "author": "Dan Myles <me@danmyles.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/dan-myles/react-native-stonk-charts.git"
  },
  "bugs": {
    "url": "https://github.com/dan-myles/react-native-stonk-charts/issues"
  },
  "homepage": "https://github.com/dan-myles/react-native-stonk-charts#readme",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index.ts",
  "source": "src/index",
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "build": "bob build",
    "publishOnly": "bob build",
    "example": "pnpm --filter react-native-stonk-charts-example run start",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "pnpm example && pnpm && pnpm pods"
  },
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!lib/typescript/example"
  ],
  "keywords": [
    "react-native",
    "ios",
    "android",
    "charts",
    "candlestick",
    "line-chart",
    "reanimated",
    "animations",
    "finance",
    "trading",
    "stocks"
  ],
  "workspaces": [
    "example"
  ],
  "engines": {
    "node": ">= 18.0.0"
  },
  "dependencies": {
    "d3-array": "^3.1.6",
    "d3-interpolate-path": "^2.2.3",
    "d3-scale": "^2",
    "d3-shape": "^3.0.1",
    "fbjs": "^3.0.5",
    "react-keyed-flatten-children": "^1.3.0",
    "react-native-redash": "^18.1.3"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^12.0.4",
    "@eslint/js": "^9.30.1",
    "@types/d3-array": "^3.0.5",
    "@types/d3-scale": "^4.0.3",
    "@types/fbjs": "^3.0.10",
    "@types/jest": "^26.0.24",
    "@types/react": "^18.2.45",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-native": "^5.0.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "pod-install": "^0.1.24",
    "prettier": "^2.3.2",
    "react": "19.0.0",
    "react-native": "0.79.5",
    "react-native-builder-bob": "^0.23.2",
    "react-native-gesture-handler": "2.28.0",
    "react-native-reanimated": "4.1.2",
    "react-native-svg": "15.11.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-gesture-handler": "*",
    "react-native-reanimated": "*",
    "react-native-redash": "*",
    "react-native-svg": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  },
  "sideEffects": false,
  "pnpm": {
    "overrides": {
      "@types/react": "^19.0.0"
    }
  }
}
